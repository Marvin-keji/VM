<Window
    x:Class="ICSharpCode.WpfDesign.Designer.PropertyGrid.Editors.CollectionEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:OutlineView="clr-namespace:ICSharpCode.WpfDesign.Designer.OutlineView"
    xmlns:PropertyGrid="clr-namespace:ICSharpCode.WpfDesign.Designer.PropertyGrid"
    Title="Edit Items"
    Width="750"
    Height="438"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Border
            Margin="10"
            BorderBrush="Black"
            BorderThickness="0.75"
            SnapsToDevicePixels="True">
            <OutlineView:Outline x:Name="Outline" />
        </Border>
        <Button
            Name="AddItem"
            Grid.Column="1"
            Width="75"
            Height="23"
            Margin="0,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="OnAddItemClicked"
            Content="Add" />
        <Button
            Name="RemoveItem"
            Grid.Column="1"
            Width="75"
            Height="23"
            Margin="0,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="OnRemoveItemClicked"
            Content="Remove" />
        <Button
            Name="MoveUpItem"
            Grid.Column="1"
            Width="75"
            Height="23"
            Margin="0,72,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="OnMoveItemUpClicked"
            Content="Move Up" />
        <Button
            Name="MoveDownItem"
            Grid.Column="1"
            Width="75"
            Height="23"
            Margin="0,102,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="OnMoveItemDownClicked"
            Content="Move Down" />
        <Border
            Grid.Column="2"
            Margin="10"
            BorderBrush="Black"
            BorderThickness="0.75"
            SnapsToDevicePixels="True">
            <PropertyGrid:PropertyGridView x:Name="PropertyGridView" Margin="0.5" />
        </Border>
    </Grid>
</Window>